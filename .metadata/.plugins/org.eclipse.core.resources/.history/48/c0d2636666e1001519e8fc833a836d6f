var getCoords = function(){
	Ti.Geolocation.purpose = "Can we use your location?";
	Ti.Geolocation.getCurrentPosition(function(x){
		console.log(x);
		var lat = x.coords.latitude;
		var lng = x.coords.longitude;
		
		console.log("lat: " + lat);
		console.log("lng: " + lng);
		
	});
	
	
};

exports.getCoords = getCoords;

