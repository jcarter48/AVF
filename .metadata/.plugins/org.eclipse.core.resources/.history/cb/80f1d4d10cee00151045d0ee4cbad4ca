var Cloud = require("ti.cloud");
Cloud.debug = true;

var authenticate = function() {
	Cloud.Users.login({
		login : "admin",
		password : "admin"
	}, function(e) {
		if (e.success) {
			console.log("it worked");
			// var apiModule = require("api");
			// apiModule.getData1();
		} else {
			alert("authentication error " + e.message);
		}
	});

};
var saveCloud = function(apiInfo) {
	//console.log(apiInfo);
	for (var i = 0,
	    j = apiInfo.recent.length; i < j; i++) {
		Cloud.Objects.create({
			classname : "recent",
			fields : {
				name : apiInfo.recent[i].title,
				division : apiInfo.recent[i].author,
				leaguePoints : apiInfo.recent[i].leaguePoints,
				wins : apiInfo.recent[i].wins,
				losses : apiInfo.recent[i].losses,
				hotStreak : apiInfo.recent[i].isHotStreak,
				veteran : apiInfo.recent[i].isVeteran,
				freshBlood : apiInfo.recent[i].isFreshBlood,
				inactive : apiInfo.recent[i].isInactive
			}
		}, function(e) {
			if (e.success) {
				//console.log("it worked");
				//console.log(save);
			} else {
				alert("authentication error " + e.message);
			}

		});
	}
};
exports.authenticate = authenticate;
exports.saveCloud = saveCloud;
