var buildUI = function(dbInfo) {
	//console.log(dbInfo, "...");
	for (var i = 0,
		j = dbInfo.length; i < j; i++) {
		var label = Ti.UI.createLabel({
			text : dbInfo[i].name + "    " + dbInfo[i].leaguePoints + "lp    W/L:" + dbInfo[i].wins + "/" + dbInfo[i].losses,
			//color : "#fff",
			font : {
				fontSize : 20
			},
			bottom : 20
		});
}
viewContainer.add(label);
};
exports.buildUI = buildUI;