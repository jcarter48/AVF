var format = {
	color : "00f",
	top : 20,
	backgroundColor : "fff"
};

var buildUI = function(wObj) {
	var win = Ti.UI.createWindow({
		backgroundImage : "background.png",
		layout : "vertical"
	});
	// var latLbl = Ti.UI.createLabel(format);
	// latLbl.text = "Latitude: " + lat;
	// var lngLbl = Ti.UI.createLabel(format);
	// lngLbl.text = "Longitude: " + lng;
	var icon = Ti.UI.createImageView({
		image: wObj.icon,
		top: 20
	});
	var iconLbl = Ti.UI.createLabel(format);
	iconLbl.text = "Conditions: " + wObj.conditions;
	var cityLbl = Ti.UI.createLabel(format);
	cityLbl.text = "City: " + wObj.city;
	var countryLbl = Ti.UI.createLabel(format);
	countryLbl.text = "Country: " + wObj.country;
	var timeLbl = Ti.UI.createLabel(format);
	timeLbl.text = "Time: " + wObj.time;
	var highLbl = Ti.UI.createLabel(format);
	highLbl.text = "High: " + wObj.high;
	var lowLbl = Ti.UI.createLabel(format);
	lowLbl.text = "Low: " + wObj.low;
	var dateLbl = Ti.UI.createLabel(format);
	dateLbl.text = "Date: " + wObj.month + "/" + wObj.day + "/" + wObj.year;
	
	//win.add(latLbl);
	//win.add(lngLbl);
	win.add(icon);
	win.add(iconLbl);
	win.add(cityLbl);
	win.add(countryLbl);
	win.add(timeLbl);
	win.add(highLbl);
	win.add(lowLbl);
	win.add(dateLbl);
	
	win.open();
};

exports.buildUI = buildUI;
