var win = Ti.UI.createWindow({
	backgroundColor : "ccc"
});

var format = {
	color: "#000",
	top: 20
};

var title = Ti.UI.createLabel(format);
var author = Ti.UI.createLabel(format);
var thumb = Ti.UI.createImageView({
	top: 20
});

win.add(thumb);
//win.add(title);
win.add(author);
win.open();

var buildUI = function(dbInfo){
	for (var i=0, j=dbInfo.data.children.length; i<j; i++){
		var title = Ti.UI.createLabel({
			text : dbInfo.data.children[i].data.title[i].title,
			top: 20
	});
	win.add(title);
};

exports.buildUI = buildUI;